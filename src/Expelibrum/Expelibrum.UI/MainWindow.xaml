<Window x:Class="Expelibrum.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Expelibrum.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400" ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15">

        <TextBlock Text="Origin Directory" Margin="3,3,0,0" FontWeight="DemiBold"/>
        <WrapPanel HorizontalAlignment="Center" Margin="5">
            <TextBox Width="300" Name="OriginTextBox"/>
            <Button Name="BrowseOrigin" Click="BrowseOrigin_Click" Margin="5,0" Width="30" Background="LightGray" Content="..."/>
        </WrapPanel>

        <TextBlock Text="Target Directory" Margin="3,3,0,0" FontWeight="DemiBold"/>
        <WrapPanel HorizontalAlignment="Center" Margin="5">
            <TextBox Width="300" Name="TargetTextBox"/>
            <Button Name="BrowseTarget" Click="BrowseTarget_Click" Margin="5,0" Width="30" Background="LightGray" Content="..."/>
        </WrapPanel>


        <Button Name="Go" Click="Go_Click" HorizontalAlignment="Center" Margin="3" Content="Go!" Background="LightGray" Width="330" Height="25"/>
    </StackPanel>
</Window>
